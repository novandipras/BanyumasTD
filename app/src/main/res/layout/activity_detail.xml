<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColAntiFlashWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/textViewn"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nama"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewv"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="No Telpon"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvtelpon"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/textViewd"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Alamat"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvalamat"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxWidth="15pt"
                android:text="TextView"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Detail"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvdetail"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="14sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttongps"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/btround"
            android:text="GPS"
            android:textColor="@color/ColAntiFlashWhite" />

        <Button
            android:id="@+id/buttoncalling"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:background="@drawable/btround"
            android:text="TELPON"
            android:textColor="@color/ColAntiFlashWhite" />


    </LinearLayout>

</LinearLayout>