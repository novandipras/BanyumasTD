<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LorDeepSaffron"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/ColLightGrey"
        android:gravity="center_vertical|center_horizontal"
        android:text="*atur nomor darurat sebelum menekan tombol darurat"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:onClick="openListView"
            app:srcCompat="@drawable/iclist" />

        <ImageView
            android:id="@+id/btlocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@android:color/transparent"
            android:onClick="opennavmap"
            app:srcCompat="@drawable/iclocation" />

        <ImageView
            android:id="@+id/btpengaturan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:onClick="openPengaturan"
            app:srcCompat="@drawable/icgear" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/tabnomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/no1"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:hint="KOSONG"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/no2"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:hint="KOSONG"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/no3"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:hint="KOSONG"
                android:textAlignment="center"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/no4"
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:hint="KOSONG"
                android:textAlignment="center"
                android:textSize="8sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/etSMS"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="@string/isi_sms"
            android:textAlignment="center"
            android:textSize="10dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/etLOKASI"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:hint="koordinatlink"
            android:textAlignment="center"
            android:textSize="10dp"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nopolisi"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:hint="POLISI"
            android:textAlignment="center"
            android:textSize="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mylatitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="LAT"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/mylongitude"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="LONG"
            android:textAlignment="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myaddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="AREA"
            android:textAlignment="center"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btDarurat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/button_style" />

        <TextView
            android:id="@+id/lokasisaya"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:background="@color/LorPersian"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Lokasi Saya"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@color/ColAntiFlashWhite"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>